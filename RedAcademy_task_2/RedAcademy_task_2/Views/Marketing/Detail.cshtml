@model Marketing

@{
    ViewData["Title"] = "Details Marketing";
}

<partial name="_GeneralNotice" />

<div class="card mx-auto" style="max-width: 1200px; margin-top: 100px;border: 1px solid #000">

    <form asp-controller="Marketing" asp-action="Detail">

        <div class="card-header text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="All" class="text-danger"></div>
            <table align="center" style="width:100%">
                <tr>
                    <td rowspan="5">
                        <img src=@Html.DisplayFor(model => model.Image) style="display: block;
                            margin-left: auto;
                            margin-right: auto;
                            border-radius: 70%;" width="100" height="100" />
                    <td><b>Title:</b> @Html.DisplayFor(model => model.Title)</td>
                    <td><b>Description:</b> @Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <td><b>Columnist:</b></td>
                    <td>@Html.DisplayFor(model => model.Columnist)</td>
                </tr>
                <tr>
                    <td><b>Category:</b></td>
                    <td>@Html.DisplayFor(model => model.Category)</td>
                </tr>
                <tr>
                    <td><b>Start Date:</b></td>
                    <td>@Html.DisplayFor(model => model.CreateDate)</td>
                </tr>
                <tr>
                    <td><b>End Date:</b></td>
                    <td>@Html.DisplayFor(model => model.FinishDate)</td>
                </tr>
                <tr>
                    <td><b>Time:</b>@Html.DisplayFor(model => model.TimetoRead)</td>
                </tr>
                <tr>
                    <td><b>Active:</b>@Html.DisplayFor(model => model.Active)</>
                </tr>
            </table>
        </div>


        <div class="card-footer text-center">
            <a asp-controller="Marketing" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-warning" style="width:120px; color: black;">Edit</a>
            <a asp-controller="Marketing" asp-action="Index" class="btn btn-outline-secondary" style="width:120px">Cancel</a>
        </div>
    </form>


</div>