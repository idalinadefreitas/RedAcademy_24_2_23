<partial name="_GeneralNotice" />

<h1>@ViewData["Title"]</h1>

<div class="container" style=" padding-top: 5px">
    <div class="row">
        <form method="get" asp-controller="Assessment" asp-action="Index" class="search">
            <div class="row align-items-center">
                <div class="col-lg-2">
                    <p>
                        <a class="btn btn-danger" asp-controller="Assessment" asp-action="Add" style="width:150px">Add</a>
                    </p>
                </div>
                <div class="col-lg-2">
                </div>
                <div class="col-lg-3">
                    <select class="form-control" id="filter" name="filter" value="@ViewBag.Filter" style="margin-right: 10px;">
                        <option value="Title">Title</option>
                        <option value="Employee">Employee</option>
                    </select>
                </div>
                <div class="col-lg-5" style="text-align:right">
                    <div class="input-group">
                        <input type="text" id="query" name="query" class="form-control" value="@ViewBag.Search" placeholder="Search..." />
                        <div class="input-group-append">
                            <button type="button" class="btn btn-info" margin="auto">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path>
                                        </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </form>
        <p>

            <table class="table table-hover">

                <thead class="thead-dark">

                    <tr style="vertical-align:middle;height:20px">

                        <th style="text-align:left;width:25%">

                            Title

                        </th>

                        <th style="text-align:left;width:25%">

                            Employee

                        </th>

                        <th style="text-align:center;width:10%">

                            Start Date

                        </th>

                        <th style="text-align:center;width:10%">

                            End Date

                        </th>

                        <th style="text-align:center;width:5%">

                            Eval

                        </th>

                        <th style="text-align:center;width:5%">

                            Active
                        </th>
                        <th style="text-align:center;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)

                        {

                            <tr style="vertical-align:middle;height:20px">

                                <td style="text-align:left;width:25%">

                                    @item.Title

                                </td>

                                <td style="text-align:left;width:25%">

                                    @item.Employee

                                </td>

                                <td style="text-align:center;width:10%">

                                    @item.StartDate.ToString("dd-MMM-yy")

                                </td>

                                <td style="text-align:center;width:10%">

                                    @item.EndDate.ToString("dd-MMM-yy")

                                </td>

                                <td style="text-align:center;width:5%">

                                    @item.FinalEvaluation

                                </td>

                                <td style="text-align:center;width:5%">

                                    @if (item.Active)

                                    {

                                        <label class="switch">

                                            <input disabled type="checkbox" checked>

                                            <span class="slider round"></span>

                                        </label>

                                    }

                                    else

                                    {

                                        <label class="switch">

                                            <input disabled type="checkbox">

                                            <span class="slider round"></span>

                                        </label>

                                    }



                                </td>

                                <td style="text-align:center;">

                                    <button type="button" class="btn btn-info" margin="auto">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path>
                                        </svg>
                                    </button>

                                    <button type="button" class="btn btn-warning" margin="auto">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"></path>
                                        </svg>
                                    </button>

                                    <button type="button" class="btn btn-danger" margin="auto">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
                                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"></path>
                                        </svg>
                                    </button>

                                </td>

                            </tr>

                        }

                    }
                </tbody>

            </table>
    </div>
</div>