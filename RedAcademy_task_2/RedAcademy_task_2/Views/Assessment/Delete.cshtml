@model Assessment

@{
    ViewData["Title"] = "Delete Assessment";
}

<div class="card mx-auto" style="max-width: 1200px; margin-top: 100px;border: 1px solid #000">

    <form asp-controller="Marketing" asp-action="Delete">

        <div class="card-header text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="All" class="text-danger"></div>
            <table align="center" style="width:100%">
                <tr>
                    <td><b>Title:</b> @Html.DisplayFor(model => model.Title)</td>
                    <td><b>Description:</b> @Html.DisplayFor(model => model.Description)</td>
                </tr>
            </table>
        </div>

        <div class="card-footer text-center">
            <input type="submit" value="Delete" class="btn btn-danger" style="width:120px">
            <a asp-controller="Assessment" asp-action="Index" class="btn btn-outline-secondary" style="width:120px">Cancel</a>
        </div>
    </form>


</div>


